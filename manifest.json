{
"manifest_version": 2,

"name": "r-rss feeds reader",
"version": "0.11.0",
"short_name": "rrss",
"description": "Reader of RSS feeds, w/GDrive for synchronization",

"oauth2":
{
  "client_id": "1043072112628-tbg2533tg0vts1ihq5c9m12m2b9kk9cs.apps.googleusercontent.com",
  "scopes":
  [
    "https://www.googleapis.com/auth/drive"
  ]
},

"key": "",

"icons":
{
  "128": "chrome/icon_rss.png"
},

"permissions":
[
  "identity",
  "identity.email",
  "storage",
  "downloads",
  "tabs",
  "https://ssl.gstatic.com/",
  "https://www.googleapis.com/",
  "https://www.google.com/",
  "https://accounts.google.com/",
  "http://*/",
  "https://*/"
],

"content_security_policy": "script-src 'self' https://apis.google.com https://drive.google.com; object-src 'self'",

"content_scripts": [ {
      "js": [ "chrome/sniff_common.js", "chrome/doc_start.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
   }, {
      "js": [ "chrome/sniff_common.js", "chrome/feed_finder.js" ],
      "matches": [ "http://*/*", "https://*/*" ]
   } ],

"browser_action":
{
  "default_title": "rrss (devel)",
  "default_icon" : "chrome/icon_rss.png"
},

"background":
{
   "persistent": false,
   "scripts": [ "chrome/background.js" ]
}

}
